@model IEnumerable<MyMVCForum.Models.Topic>

@{
    ViewBag.Title = "My MVC Forum";
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TopicName)
        </th>
        <th>
            Author
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DatePost)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink((string)item.TopicName, "Index", "Topic", new { id = item.TopicID }, null)
            </td>
            @*test GetUserId*@
            <td>
                @Html.DisplayFor(modelItem => item.AuthorTopic.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatePost)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.TopicID }) |
                @Html.ActionLink("Details", "Details", new { id = item.TopicID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.TopicID })
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Create New", "Create")
</p>